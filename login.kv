<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        TextInput:
            id: email
            hint_text: "Email"
            multiline: False

        TextInput:
            id: senha
            hint_text: "Senha"
            multiline: False
            password: True

        Button:
            text: "Entrar"
            on_press: root.login()

        Button:
            text: "Registrar"
            on_press: app.root.current = "register"
